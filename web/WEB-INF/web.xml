<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>SmartNode Service</display-name>
    <description>Joseph Paul Cohen</description>
    
    <servlet>
        <servlet-name>SmartNode Service</servlet-name>
        <display-name>SmartNode Service</display-name>
        <servlet-class>smartnode.web.ExampleServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>SmartNode Service</servlet-name>
        <url-pattern>/Service/*</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
    	<welcome-file>index.html</welcome-file>
    </welcome-file-list>

	 <session-config>
	 	<session-timeout>20000</session-timeout>
	 </session-config>

</web-app>
